<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:page="clr-namespace:MyNet.Client.Pages;assembly=MyNet.Client">
    <Style x:Key="NavPageStyle" TargetType="page:BasePage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="page:BasePage">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="126"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0">
                            <Border.Background>
                                <ImageBrush Stretch="Fill" ImageSource="/AllInOne.Client;component/Resources/Images/inner_header_bg.jpg"/>
                            </Border.Background>
                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                <Button Style="{StaticResource btn img}" HorizontalAlignment="Left" VerticalAlignment="Center"
                                        Width="48" Height="48" Margin="40,0,0,0"
                                        Tag="/AllInOne.Client;component/Resources/Images/return.png"
                                        Command="{Binding RelativeSource={RelativeSource AncestorType=page:BasePage},Path=NavigateCmd}"
                                        CommandParameter="-1"/>
                                <!--<Label Style="{DynamicResource h1}" Margin="30,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Content="{Binding RelativeSource={RelativeSource AncestorType=Page},Path=Title}"/>-->
                                <Image  Margin="30,0,0,0" Style="{StaticResource ImgBaseStyle}" Height="43" Source="{Binding RelativeSource={RelativeSource AncestorType=Page},Path=Tag}"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="1">
                            <AdornerDecorator>
                                <ContentPresenter/>
                            </AdornerDecorator>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>